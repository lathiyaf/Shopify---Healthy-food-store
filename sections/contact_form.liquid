<section class="wholesaler_form" id="ambassador_form">
    <div class="container">
        <div class="main_form_div col-lg-8 m-auto">
            <div class="row m-0">
                <div class="col-12">
                    <div class="title_div">
                        <div class="img_div">
                            {% include 'icon-wholesaler' %}
                        </div>
                        {% if section.settings.title_txt != blank %}
                            <h4 class="mb-0">{{ section.settings.title_txt }}</h4>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% form 'customer', id: 'contact-form' %}
                <div class="row my-3 mx-0">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <label>Vorname</label>
                            <input class="form-control" type="text" name="contact[first_name]" id="first-name"  placeholder="" required>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group">
                            <label>Nachname</label>
                            <input class="form-control" type="text" name="contact[last_name]" id="last-name"  placeholder="" required>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group">
                            <label>Email</label>
                            <input class="form-control" type="email" name="contact[email]" id="contact-email" placeholder="" aria-required="true" required>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group">
                            <label>Telefonnummer</label>
                            <input class="form-control" type="tel"  id="contact-phone" name="contact[phone]" pattern="[0-9\-]*" placeholder="" required>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="input-group">
                            <label>Nachricht</label>
                            <textarea required rows="6" class="form-control"  name="contact[body]">{% if form.body %}{{ form.body }}{% endif %}</textarea>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit"  class="button-all mb-3 mx-auto w-full-mob shadow-none">Absenden</button>
                    </div>
                </div>
            {% endform %}
        </div>
    </div>
</section>
{% schema %}
  {
    "name": "Contact Form",
	"settings": [
      {
          "type": "textarea",
          "id": "title_txt",
          "label": "Title"
      }
    ]
  }
{% endschema %}