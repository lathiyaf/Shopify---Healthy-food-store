{% if product.metafields.my_fields.related_image != blank %}
<section class="related-block position-relative">
    <div class="up_light_animated_wave"></div>
    {% if section.settings.left_image != blank %}
    <div class="left_img position-absolute animation_img">
        <img class="lazyload" data-src="{{ section.settings.left_image | img_url: '200x' }}" alt="Animation Image" data-aos="fade-right" data-aos-duration="2000" class="aos-init aos-animate">
    </div>
    {% endif %}
    <div class="related-block-inner py-lg-5 pt-5">
        {% if section.settings.title_txt != blank %}
        <div class="title_div mb-5 text-center">
            <h3>{{ section.settings.title_txt }}</h3>
        </div>
        {% endif %}
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-lg-0 mb-5">
                    <div class="img_div">
                            {%- assign preview_image = product.metafields.my_fields.related_image -%}
                            {%- assign img_url = preview_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                            {% unless preview_image == blank %}
                                {% include 'image-style', image: preview_image, height: max_height %}
                            {% endunless %}
                            <img id="{{ img_id }}"
                            class="lazyautosizes lazyload js glass_img aos-init"
                            alt="{{ preview_image.alt }}"
                            data-src="{{ img_url }}"
                            data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                            data-aspectratio="{{ preview_image.aspect_ratio }}"
                            data-sizes="auto"
                            data-image  data-index="{{ forloop.index }}" data-aos="zoom-in" data-aos-duration="1000" data-aos-delay="400" data-aos-offset="300" >
                    </div>
                </div>
                <div class="col-lg-6">
                    {% if product.metafields.my_fields.related_text != blank %}
                    <div class="content_text bullet_text">
                        {{ product.metafields.my_fields.related_text }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% if section.settings.right_image != blank %}
    <div class="right_img position-absolute animation_img">
        <img class="lazyload" data-src="{{ section.settings.right_image | img_url: '200x' }}" alt="Animation Image" data-aos="fade-left" data-aos-duration="2000" class="aos-init aos-animate">
    </div>
    {% endif %}
    <div class="down_light_animated_wave"></div>
</section>
{% endif %}
{% schema %}
{
    "name": "Related Block",
    "settings":[
        {
            "type": "textarea",
            "id": "title_txt",
            "label": "Title"
        },
        {
            "type": "image_picker",
            "id": "left_image",
            "label": "Left Animation Image"
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Animation Image"
        }
    ]
}
{% endschema %}