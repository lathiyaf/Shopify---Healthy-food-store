<section class="wholesaler_image_card">
    <div class="container">
        <div class="title_div text-center mb-5">
            {% if section.settings.title != blank %}
                <h3>{{ section.settings.title }}</h3>
            {% endif %}
        </div>
        {% if section.settings.richtext != blank %}
        <div class="richtext text-center">
            {{ section.settings.richtext }}
        </div>
        {% endif %}
        <div class="row features_mobile">
            {% for block in section.blocks %}
                <div class="col-md-6 main_div">
                    <div class="lg-bg-color">
                        <div class="row align-items-center m-0 ">
                            {% if block.settings.image != blank %}
                            <div class="col-md-4">
                                <div class="card_img_class">
                                    <img class="lazyload" data-src="{{ block.settings.image | img_url:'200x200' }}" />
                                </div>
                            </div>
                            {% endif %}
                            <div class="col-md-8 mt-md-0 mt-3">
                                {% if block.settings.card_title != blank %}
                                <div class="card_info_class mt-3 mt-md-0">
                                <h5>{{ block.settings.card_title }}</h5>
                                </div>
                                {% endif %}
                                {% if block.settings.card_info != blank %}
                                <div class="p_text">
                                    {{ block.settings.card_info }}
                                </div>
                                {% endif %}
                                {% if block.settings.btn_url != blank %}
                                    <a class="button-all w-full-mob shadow-none" href="{{ block.settings.btn_url }}">{{ block.settings.btn_txt }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="text-center">
            {% if section.settings.btn_url != blank %}
                <a class="button-all m-auto shadow-none" href="{{ section.settings.btn_url }}">{{ section.settings.btn_txt }}</a>
            {% endif %}
        </div>
    </div>
</section>
{% schema %}
  {
    "name": "Wholesaler card",
	"class": "section_start",
	"settings": [
      {
        "type":"header",
        "content":"Top info"
      },
      {
        "type":"text",
        "id":"title",
        "label":"Title"
      },
	  {
        "type":"richtext",
        "id":"richtext",
        "label":"text"
      },
      {
        "type":"text",
        "id":"btn_txt",
        "label":"Button Text"
      },
      {
        "type":"url",
        "id":"btn_url",
        "label":"Button Url"
      }
    ],
	"blocks": [
	  {
          "type":"card",
          "name":"Card",
          "settings": [
			  {
                  "type":"image_picker",
                  "id":"image",
                  "label":"Card image"
              },
			  {
                  "type":"text",
                  "id":"card_title",
                  "label":"Card title"
              },
			  {
                  "type":"richtext",
                  "id":"card_info",
                  "label":"Card text info"
              },
              {
                "type":"text",
                "id":"btn_txt",
                "label":"Button Text"
              },
              {
                "type":"url",
                "id":"btn_url",
                "label":"Button Url"
              }
           ]
      }
	]
  }
{% endschema %}